color1 = #122430
color2 = #273E45
color3 = #FFFCE2
color4 = #EBD2B5
color5 = #E63531

shade2 = #446C78

/* media queries */
autotext(n)
  @media screen and (max-width: 300px)
    font-size n - 0.3em
  @media screen and (min-width: 500px)
    font-size n - 0.2em
  @media screen and (min-width: 700px)
    font-size n - 0.1em
  @media screen and (min-width: 1200px)
    font-size n

body
  color color3
  background-color color1
  font-family 'Gentium Book Basic', sans-serif
  autotext(1.2em)
  padding 0
  margin 0

header
  background-color color2
  height 175px
  border-bottom 1px solid shade2
  border-top 2px solid shade2
  text-align center
  .author
    font-style italic


#content
  float left
  @media screen and (min-width: 960px)
    width 960px
  @media screen and (min-width: 1280px)
    width 1280px
  margin-left 10%
  margin-top 2%

a
  color color4
  text-decoration none

h1
  font-family 'Open Sans'
  font-weight normal

nav
  position absolute
  top 0
  left 0
  width 100%
  background-color color3
  font-family 'Open Sans'
  font-size 0.8em
  a
    color color1
  autotext(1.0em)
  ul
    width 960px
    margin-left auto
    margin-right auto
    padding 0
    li
      display inline-block
      text-align center
    li.last
      margin 0

aside
  float right
  width 15%
  margin-right 25px
  margin-top 25px
  autotext(1.0em)
  background-color color4
  color color5

footer
  clear both
  font-size .75em
  font-family 'Open Sans'
  font-weight normal
  margin-left 10%
  margin-right 10%
  text-align center


