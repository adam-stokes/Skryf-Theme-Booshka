<!DOCTYPE html>
%= t 'html' => begin
  %= t 'head' => begin
    <meta name="viewport" content="width=device-width" />
    %= t 'title' => config->{title}
      %= stylesheet '/stylesheets/bundle.css'
      %= stylesheet 'http://fonts.googleapis.com/css?family=Open+Sans:400,700,600|Gentium+Book+Basic:400,700'
      %= javascript '/javascripts/app-min.js'
  %= end
  %= t 'body' => begin
    %= t 'div', id => 'header' => begin
      %= t 'h1', class => 'title' => config->{title}
      %= t 'h3', class => 'author' => begin
        by <%= config->{author} %>
      %= end
    %= end
    %= t 'div', id => 'content' => begin
      <%= content %>
    %= end
    %= include 'side'
    %= include 'footer'
  %= end
%= end
