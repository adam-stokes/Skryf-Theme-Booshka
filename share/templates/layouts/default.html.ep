<!DOCTYPE html>
<html>
  <head>
    %= t 'title' => config->{title}
    %= stylesheet '/stylesheets/bundle.css'
    %= javascript '/javascripts/app.min.js'
</head>
<body>
    <div class="container">
      <header>
	<h1><%= config->{title} %> <small>by <%= config->{author} %></small></h1>
	%= include 'nav'
      </header>
      <div class="row">
	<div class="col-md-8">
	  <%= content %>
	</div>
	%= include 'side'
      </div>
      %= include 'footer'
    </div>
</body>
</html>
